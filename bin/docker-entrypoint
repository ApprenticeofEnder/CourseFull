#!/bin/bash -e
export COURSEFULL_ENV=Prod
OP_SERVICE_ACCOUNT_TOKEN=$(cat /run/secrets/OP_SERVICE_ACCOUNT_TOKEN) \
  op run --env-file='/secrets/.env.tpl' -- \
  ./bin/rails db:prepare
OP_SERVICE_ACCOUNT_TOKEN=$(cat /run/secrets/OP_SERVICE_ACCOUNT_TOKEN) \
  op run --env-file='/secrets/.env.tpl' -- \
  ./bin/rails server
