#!/bin/bash -e
docker-compose -f docker-compose.test.yml up -d
op run --env-file=./.env.test.tpl -- rails db:create RAILS_ENV=test
op run --env-file=./.env.test.tpl -- rails db:migrate RAILS_ENV=test
op run --env-file=./.env.test.tpl -- rails db:test:prepare RAILS_ENV=test
op run --env-file=./.env.test.tpl -- bundle exec rspec
docker-compose -f docker-compose.test.yml stop