#!/bin/bash -e
docker-compose -f docker-compose.test.yml up -d
op run --env-file=./.env.test.tpl -- rails db:create RAILS_ENV=test
op run --env-file=./.env.test.tpl -- rails db:migrate RAILS_ENV=test
op run --env-file=./.env.test.tpl -- rake test RAILS_ENV=test
docker-compose -f docker-compose.test.yml down