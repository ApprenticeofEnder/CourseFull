#!/bin/bash
export COURSEFULL_ENV=Test
export $(op inject -i .env.tpl)

set -exo pipefail

echo "Waiting for Postgres..."

sleep 0.5

while ! nc -z localhost 5432; do
	sleep 0.5
done

echo "Postgres started"

rails db:create
rails db:migrate
rails db:test:prepare
rails db:seed
foreman start -f Procfile.test
